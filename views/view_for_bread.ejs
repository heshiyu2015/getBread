<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <h1><%= title %></h1>
    <h2><img src='<%= author_img %>' alt='<%= author_name %>'></h2>
    <h2><%= author_name %></h2>
    <h2><%= num_of_days %>天的快乐之旅</h2>
  </head>

  <body>
    <% theseDays.forEach(function(oneDay){ %>
      <div id='view-for-oneday'>
        <h2 id='date-and-whichday'><%= oneDay[0] %>&nbsp;&nbsp<%= oneDay[1] %></h2>
        <% oneDay.splice(0,2) %>
        <div id='view-for-wap'>
          <% oneDay.forEach(function(wap){ %>
	    <div id='view-for-eachwap'>
	      <p><img src='<%= wap[1] %>' alt='点击放大预览'></p>
              <p><%= wap[0] %></p>
              <p><%= wap[2] %>&nbsp;&nbsp;<%= wap[3] %></p>
	    </div>
          <% }) %>
        </div>
      </div> 
    <% }) %> 
  </body>
</html>
